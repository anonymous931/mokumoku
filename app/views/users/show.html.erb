<div class="py-3">
  <div class="pt-5 pb-5">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-xl-12 col-lg-12 col-md-12 col-12">
          <!-- Bg -->
          <div class="pt-16 rounded-top-md" style="
          background: url(<%= image_url('profile-bg.jpg') %>) no-repeat;
            background-size: cover;
          "></div>
          <div class="d-flex align-items-end justify-content-between bg-white px-4 pt-2 pb-4 rounded-none rounded-bottom-md shadow-sm">
            <div class="d-flex align-items-center">
              <div class="me-2 position-relative d-flex justify-content-end align-items-end mt-n5">
                <%= image_tag @user.decorate.avatar, class: 'avatar-xl rounded-circle border border-4 border-white' %>
              </div>
              <div class="lh-1">
                <h2 class="mb-0">
                  <%= @user.name %>
                </h2>
                <% if current_user == @user %>
                <% elsif current_user.following?(@user) %>
                  <%= link_to "フォローを外す", user_relationships_path(@user.id), method: :delete %>
                <% else %>
                  <%= link_to "フォローする", user_relationships_path(@user.id), method: :post %>
                <% end %>
              </div>
            </div>
          </div>
          <div class="card mt-2">
            <!-- Card header -->
            <div class="card-header">
              <h3 class="mb-0">プロフィール</h3>
            </div>
            <!-- Card body -->
            <div class="card-body">
              <h2>Hobby</h2>
              <h4><%= @user.hobby %></h4>
              <h2 class="mt-2">Profile</h2>
              <h4><%= @user.profile %></h4>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>